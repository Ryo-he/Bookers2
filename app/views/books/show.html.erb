<div class = "container px-5 px-sm-0">
<div class = "row">
<div class= "col-md-3">
<h1>User Info</h1>
<table class = "table">
<tbody>
<tr>
<% if @user.profile_image.attached? %>
<%= image_tag @user.get_profile_image(100, 100) %>
<% end %>
</tr>
<tr>
<th>name</th>
<th><%= @user.name %></th>
</tr>
<tr>
<th>introduction</th>
<th><%= @user.introduction %></th>
</tr>
</table>
<a class="btn btn-outline-secondary btn-block fas fa-user-cog" href="/users/:id/edit"></a>


<h1>New Book</h1>
<%= form_with model: @book, local: true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_area :opinion %>
<%= f.submit 'create book' %>
<% end %>

</div>
<div class = "col-md-8 off-set-md-1">
<h1 class = "ml-5">Book detail</h1>
<table class="table">
<thead></thead>
<tbody>
  <tr>
   <th><%= link_to user_path(current_user.id) do %> 
       <% if @user.profile_image.attached? %>
       <%= image_tag @user.get_profile_image(50,50) %> 
       <br>
       <p><%= @user.name %></p>
       <% end %>
       <% end %>
       </th>
       <th><%= link_to @book.title, book_path(@book.id) %></th>
       <th><%= @book.body %></th>
       <th><%= link_to 'Edit', edit_book_path(@book.id) %></th>
       <th><%= link_to 'Delete', book_path(@book), method: :delete, "data-confirm"=>"本当に消してもいいですか？" %>
       </th>
   </tr>
   </tbody>
   </table>
</div>
</div>
