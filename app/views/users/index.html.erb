<h1>User Info</h1>
<%= image_tag current_user.get_profile_image(100,100) %>
<p>name</p>
<%= current_user.name %>
<p>introduction</p>
<%= link_to 'edit', edit_user_path(current_user.id) %>


<h1>New Book</h1>
<%= form_with model: @book, url:'/users',method: :post,local:true do |f| %>
<p>Title</p>
<%= f.text_field :title %>
<p>opinion</p>
<%= f.text_area :opinion %>
<%= f.submit 'create book' %>
<% end %>

<h1>Users</h1>
<p>Image</p>
<p>name</p>
<%= @users.each do |user| %>
<%= image_tag user.get_profile_image(100,100) %>
<%= user.name %>
<%= link_to 'Show',user_path(user.id) %>
<% end %>