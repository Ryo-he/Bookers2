<table class="table">
<thead>
  <tr>
   <th>image</th>
   <th>name</th>
   <th></th>
   </tr>
</thead>
<tbody>
<% @users.each do |user| %>
<tr>
<td><% if user.profile_image.attached? %>
<%= image_tag user.get_profile_image(50,50) %>
<% end %>
</td>
<td>
<%= user.name %>
</td>
